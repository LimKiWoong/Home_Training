<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".training_view"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/training_imageview"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/border_circle">

        <TextView
            android:id="@+id/training_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플랭크"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/popup_example"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:background="@android:drawable/ic_menu_help"
            android:layout_gravity="center_vertical"
            android:onClick="openExamplePopup"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_circle"
                android:padding="3dp">

                <TextView
                    android:id="@+id/setnumber_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="40dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_circle"
                android:padding="3dp">

                <TextView
                    android:id="@+id/setnumber_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세트"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/listview_border"
        android:padding="10dp">
        <TextView
            android:id="@+id/training_time_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="80dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textSize="80dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/training_time_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textSize="80dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/training_stop"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_circle"
            android:text="STOP"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/training_skip"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/border_circle"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>