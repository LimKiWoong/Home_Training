        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어제"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_circle"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동시간 : "
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/yesterdaymin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/yesterdaysec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI지수"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_circle"
            android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 : "
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/bmi_shownumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/bmi_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/borderline3"
                android:onClick="openBmiPopup"
                android:text="수치입력"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/level1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="저체중"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_weight="18.5"
                android:textAlignment="center"
                android:background="#9BC1C1"/>
            <TextView
                android:id="@+id/level2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="정상"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_weight="15"
                android:textAlignment="center"
                android:background="#586ADF"/>
            <TextView
                android:id="@+id/level3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="과체중"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_weight="13"
                android:textAlignment="center"
                android:background="#9B6FD1"/>
            <TextView
                android:id="@+id/level4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비만"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_weight="15"
                android:textAlignment="center"
                android:background="@color/purple_200"/>
            <TextView
                android:id="@+id/level5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="고도비만"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_weight="20"
                android:textAlignment="center"
                android:background="#FF0000"/>
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="              18.5        23       25         30                 "
                    android:textSize="20sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>